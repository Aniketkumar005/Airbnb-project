
<% layout("/layouts/boilerplate.ejs") %>

<!-- Collapsible Filters Button -->
<p>
  <button class="btn bar mt-3" type="button" data-bs-toggle="collapse" data-bs-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
    <i class="fa-solid fa-bars"></i>
  </button>
</p>

<!-- Collapsible Filters Section -->
<div class="collapse" id="collapseExample">
  <div class="card card-body">
    <div id="filters" class="row row-cols-2 row-cols-sm-3 row-cols-md-4 row-cols-lg-5 g-3">
      <!-- Filters -->
      <div class="col text-center filter">
        <div><a href="/listings"><i class="fa-solid fa-bed fa-2x"></i></a></div>
        <p>Rooms</p>
      </div>
      <div class="col text-center filter">
        <div><a href="/listings"><i class="fa-solid fa-mountain-city fa-2x"></i></a></div>
        <p>Iconic Cities</p>
      </div>
      <div class="col text-center filter">
        <div><a href="/listings"><i class="fa-solid fa-mountain fa-2x"></i></a></div>
        <p>Mountains</p>
      </div>
      <div class="col text-center filter">
        <div><a href="/listings"><i class="fa-brands fa-fort-awesome fa-2x"></i></a></div>
        <p>Castles</p>
      </div>
      <div class="col text-center filter">
        <div><a href="/listings"><i class="fa-solid fa-campground fa-2x"></i></a></div>
        <p>Camping</p>
      </div>
      <div class="col text-center filter">
        <div><a href="/listings"><i class="fa-solid fa-cow fa-2x"></i></a></div>
        <p>Farms</p>
      </div>
      <div class="col text-center filter">
        <div><a href="/listings"><i class="fa-regular fa-snowflake fa-2x"></i></a></div>
        <p>Arctic</p>
      </div>
      <div class="col text-center filter">
        <div><a href="/listings"><i class="fa-solid fa-igloo fa-2x"></i></a></div>
        <p>Domes</p>
      </div>
      <div class="col text-center filter">
        <div><a href="/listings"><i class="fa-solid fa-ship fa-2x"></i></a></div>
        <p>Boats</p>
      </div>
    </div>
    
    <!-- Tax Toggle -->
    <div class="tax-toggle mt-3">
      <div class="form-check form-switch text-end">
        <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
        <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes</label>
      </div>
    </div>
  </div>
</div>

<!-- Listings Section -->
<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4 mt-3">
  <% for (listing of allListings) { %>
    <div class="col">
      <a href="/listings/<%= listing._id %>" class="listing-link text-decoration-none">
        <div class="card listing-card h-100">
          <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" style="height: 15rem; object-fit: cover;">
          <div class="card-body">
            <p class="card-text">
              <b><%= listing.title %></b><br>
              &#8377; <%= listing.price.toLocaleString("en-IN") %> / night
              <span class="tax-info text-muted small"> &nbsp;&nbsp;18% GST</span>
            </p>
          </div>
        </div>
      </a>
    </div>
  <% } %>
</div>
 







